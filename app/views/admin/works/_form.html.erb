<%= form_for([:admin, @work]) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
      <% @work.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h3 class='app-headline'>Work Info</h3>

	<%= f.label :title %>
	<div class="field"><%= f.text_field :title, placeholder: 'Title' %></div>

	<%= f.label :host_id, 'Host' %>
	<div class="field"><%= f.select :host_id, Work::HOST_CODE_LABELS, {}, class: 'select_small_field' %></div>

	<%= f.label :still_code %>
	<div class="field"><%= f.text_field :still_code, placeholder: 'Still Code (Vimeo only)' %></div>
  
	<%= f.label :video_code %>
	<div class="field"><%= f.text_field :video_code, placeholder: 'Video Code' %></div>
  
	<%= f.label :description %>
	<div class="field"><%= f.text_area :description %></div>

	<%= f.label :mobile %>
	<div class="field"><%= f.select :mobile, [['On', true], ['Off', false]], {}, class: 'select_small_field' %></div>

	<br>

	<div class="actions">
		<%= f.submit :class => 'btn-primary' %>
	</div>

<% end %>
